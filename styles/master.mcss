body {
  header {
    font-size: 320%
    margin-bottom: 1em
    padding: 20px 40px
    background: #5BA73D

    (a) {
      color: white
      text-decoration: none
    }

    p {
      color: #FFF0B5
      font-size:60%
      text-shadow: 1px 1px 2px black
    }

    box-shadow: 0 0 10px gray
  }

  div {
    margin: 20px 40px
  }

  footer {
    margin: 20px 40px
    color: gray
    font-size: 90%
  }

}

Page {
  max-width: 1000px
  min-width: 500px
}